---
export interface Props {
  title : string,
  descr : string,
  link : string
  from : string,
  to : string,
}

const {title, descr, link, from, to } = Astro.props

---



<div class=`w-1/3 h-32 mr-8 mb-8 rounded-lg p-[2px] bg-gradient-to-tr ${from} ${to}`>
  <div class="flex flex-col rounded-lg bg-stone-900 items-center justify-center  w-full h-full">
    <a href={link} class="text-xl font-bold text-stone-200">{title}</a>
    <h2 class="text-md">{descr}</h2>
  </div>
</div>