---
export interface Props {
  date_place : string
  title: string
}

const { date_place, title } = Astro.props;
---



<div class="flex flex-col mb-8" >
  <div class="flex flex-col md:flex-row md:justify-between md:items-center">
    <h2 class="font-medium md:order-2  md:text-end">
      {date_place}
    </h2>
    <h2 class="font-bold text-stone-200 text-2xl md:w-2/3 ">
      {title}
    </h2>
  </div>
  <h2 class="font-medium text-sm md:w-2/3"> 
    <slot> 
      Things that I did.
    </slot> 
  </h2>
</div>