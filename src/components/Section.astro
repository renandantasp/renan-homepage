---
export interface Props {
  title: string,
  color : Palette
}

const { title, color } = Astro.props
---

<div class=" flex justify-start flex-col lg:flex-row lg:align-start">

  <h2 class=`text-2xl lg:text-right pr-8 font-bold mt-10 mb-4 lg:w-48 lg:m-0 ${color.accent_color} `>{title}</h2>
  <div class="w-full">
    <slot/>
  </div>
</div>