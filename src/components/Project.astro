---
import {Sprite} from 'astro-icon'
export interface Props {
  title : string
  descr : string
  type : string
  githubLink : string
  websiteLink? : string
  color : Palette
}

const {title, descr, type, githubLink, websiteLink, color } = Astro.props

---



<div class=`md:w-2/5 w-full md:mr-8 mb-8 rounded-lg p-[3px] bg-gradient-to-tr ${color.gradient_from} ${color.gradient_to}`>
  <div class="flex flex-col rounded-lg bg-stone-900 items-center justify-center w-full h-full">
    <p class=`text-xl font-bold ${color.main_color}`>{title}</p>
    <p class=`${color.secondary_color} text-md`>{type}</p>
    <p class=`${color.secondary_color} text-md`>{descr}</p>

    
    <div class=`flex my-2 flex-row ${color.secondary_color}`>
        <a class="px-1 py-0.5 bg-stone-500 hover:bg-stone-400 active:bg-stone-600 mx-1 text-stone-900 text-xs rounded-lg" href={githubLink}>GIT</a>
        {websiteLink ? <a class="px-1 py-0.5 bg-stone-500 hover:bg-stone-400 active:bg-stone-600 ease-out duration-200 mx-1 text-stone-900 text-xs rounded-lg" href={websiteLink}>WEB</a> : <></> }
      </div>
  </div>
</div>